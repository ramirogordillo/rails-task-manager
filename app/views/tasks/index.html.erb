<div class="container">
<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed %>
    <p><%= link_to "✓ #{task.title}", task_path(task) %></p>
    <% else %>
    <p><%= link_to "✗ #{task.title}", task_path(task) %></p>
  <% end %>
<% end %>
<p><%= link_to "Add a new task", new_task_path %></p>
</div>

